<h1>Nowa kategoria</h1>
<%= form_for :category, url: categories_path do |f| %>
   
  <p>
    <%= f.label :cat %><br>
    <%= f.text_field :cat %>
  </p>
   <p>
    <%= f.label :description %><br>
